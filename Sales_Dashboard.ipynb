# Step 1: Import Libraries
import panda as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load Dataset
df = pd.read_csv("sales_data.csv")

# Step 3: Quick Data Overview
print("Data Shape:", df.shape)
print("\nData Preview:\n", df.head())
print("\nMissing Values:\n", df.isnull().sum())

# Step 4: Data Cleaning
df['Order Date'] = pd.to_datetime(df['Order Date'])
df['Month'] = df['Order Date'].dt.month_name()
df['Year'] = df['Order Date'].dt.year

# Step 5: Sales by Category
category_sales = df.groupby('Category')['Sales'].sum().sort_values(ascending=False)
print("\nSales by Category:\n", category_sales)

# Step 6: Visualization - Sales by Region
plt.figure(figsize=(8,5))
sns.barplot(data=df, x='Region', y='Sales', estimator=sum, ci=None)
plt.title("Total Sales by Region", fontsize=14)
plt.xlabel("Region")
plt.ylabel("Sales")
plt.tight_layout()
plt.show()

# Step 7: Profit Trend by Month
plt.figure(figsize=(10,5))
monthly_profit = df.groupby('Month')['Profit'].sum().reindex([
    'January','February','March','April','May','June','July','August','September','October','November','December'
])
monthly_profit.plot(kind='bar', color='skyblue')
plt.title("Monthly Profit Trend", fontsize=14)
plt.ylabel("Profit")
plt.show()

# Step 8: Insights
print("\n✅ Top Performing Category:", category_sales.idxmax())
print("✅ Highest Profit Month:", monthly_profit.idxmax())